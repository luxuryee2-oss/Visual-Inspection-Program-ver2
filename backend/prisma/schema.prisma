generator client {
  provider = "prisma-client-js"
  engineType = "library"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  username  String   @unique
  password  String
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  inspections Inspection[]
}

model Inspection {
  id          String   @id @default(cuid())
  productName String
  inspector   String
  notes       String?
  photos      String   // JSON string: { front: string | null, back: string | null, left: string | null, right: string | null }
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
